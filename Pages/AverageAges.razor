@page "/AverageAges"

<h3>AverageAges</h3>


<h5>Ages list</h5>
@for(int i = 0; i < ages.Length; i++)
{
    <div style="display: inline-block;">
        
        <p style="color: darkslateblue;">{@ages[i]}</p>
    </div>   
}

<p>Oldest: @GetOldest()</p>
<p>Youngest: @GetYoungest()</p>
@code {
    private int[] ages = new int[10] {13, 24, 11, 32, 65, 73, 92, 80, 55, 34};

    private int GetOldest()
    {
        int oldest = 0;
        for(int i = 0; i < ages.Length; i++)
        {
            if(ages[i] > oldest)
                oldest = ages[i];
        }
        return oldest;
    }
    private int GetYoungest()
    {
        int yougest = ages[0];
        for(int i = 0; i < ages.Length; i++)
        {
            if(ages[i] < yougest)
                yougest = ages[i];
        }
        return yougest;
    }

    
    private int GetAverage()
    {
        int average, sum = 0;
        for(int i = 0; i < ages.Length; i++)
        {
            sum += ages[i];
        }
        return average = sum / ages.Length;
    }

    private int GetAverageJagged()
    {
        int[][] jArray = new int[5][]; //{13, 24, 11, 32, 65, 73, 92, 80, 55, 34}; 
        jArray[0] = new int[2] {13, 24};
        jArray[1] = new int[2] {11, 32};
        jArray[2] = new int[2] {65, 73};
        jArray[3] = new int[2] {92, 80};
        jArray[4] = new int[2] {55, 34};

        int average, sum = 0, totalElements = 0;;

        for(int i = 0; i < jArray.Length; i++)
        {
            
            for(int arrIndex = 0; arrIndex < jArray[i].Length; arrIndex++)
            {
                sum += jArray[i][arrIndex];
                System.Console.WriteLine($"Pos jArray: {i}\n Pos jArray[{arrIndex}]:{jArray[i][arrIndex]}");
                totalElements++;
            }
        }
        return sum / totalElements;
    }
}


